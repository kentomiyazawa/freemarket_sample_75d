<div class="registrations">
  <div class ="registrations__b">
    <h1 class="registrations__b__title">
    新規登録
    </h1>

    <%= form_for(@user, url: user_registration_path) do |f| %>
      <%= render "devise/shared/error_messages", resource: @user %>
    <br>
      <div class="d_field">
        <%= f.label :ニックネーム, class: "d_field__title" %><span class="need_user_info">　必須</span><br />
        <%= f.text_field :nickname, autofocus: true, class: "d_field__box" %>
      </div>
      <br>
      <div class="d_field">
        <%= f.label :メールアドレス, class: "d_field__title" %><span class="need_user_info">　必須</span><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "d_field__box"%>
      </div>
      <br>
      <div class="d_field">
        <%= f.label :パスワード, class: "d_field__title" %><span class="need_user_info">　必須</span>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "d_field__box" %>
      </div>
      <br>
      <div class="d_field">
        <%= f.label :パスワード確認, class: "d_field__title" %><span class="need_user_info">　必須</span><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "d_field__box" %>
      </div>
      <br>

      <div class= "d_field_name">
        <%= f.label :"お名前(全角)", class: "d_field__title" %><span class="need_user_info">　必須</span><br />
        <div class="d_field_name__a">
          <%= f.text_field :family_name, autofocus: true, placeholder: "名字", class: "d_field_name__a__inp" %>
        </div>
        <div class="d_field_name__b">
          <%= f.text_field :first_name, autofocus: true, placeholder: "名前", class: "d_field_name__b__inp" %>
        </div>
      </div>

      <div class= "d_field_name2">
        <%= f.label :"ふりがな・お名前(全角)", class: "d_field__title" %><span class="need_user_info">　必須</span><br />
        <div class="d_field_name2__a">
          <%= f.text_field :family_name_kana, autofocus: true, placeholder: "名字", class: "d_field_name2__a__inp" %>
        </div>
        <div class="d_field_name2__b">
          <%= f.text_field :first_name_kana, autofocus: true, placeholder: "名前", class: "d_field_name2__b__inp" %>
        </div>
      </div>

      <div class="d_field">
        <%= f.label :生年月日, class: "d_field__title" %><span class="need_user_info">　必須</span><br />
        <%= f.date_field :birthday, autofocus: true, maxlength: '8', class: "d_field__box" %>
      </div>
      <br>
      <div class="regi_actions">
        <%= f.submit "次へ進む", class: "regi_actions__btn" %>
      </div>
    <% end %>
    <br>
    <div class="devise__render">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>