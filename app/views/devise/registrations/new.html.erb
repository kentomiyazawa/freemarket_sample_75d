<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <h3>ユーザー情報</h3>
  <div class="field">
    <%= f.label :family_name %><br />
    <%= f.text_field :family_name, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :family_name_kana %><br />
    <%= f.text_field :family_name_kana, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :first_name_kana %><br />
    <%= f.text_field :first_name_kana, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :birthday %><br />
    <%= f.number_field :birthday %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>


  <h3>住所登録</h3>
  <div class="field">
    <%= f.label :post_code %><br />
    <%= f.number_field :post_code, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :prefecture %><br />
    <%= f.text_field :prefecture, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :block %><br />
    <%= f.text_field :block, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :building %><br />
    <%= f.text_field :building, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :telephone_number %><br />
    <%= f.number_field :telephone_number, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
